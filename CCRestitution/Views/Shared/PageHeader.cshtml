<header class="d-flex flex-row justify-content-between align-items-center  mb-3">
    <div class="grow">
        <a asp-action="Index" style="color: rgb(33, 37, 41); text-decoration: none"><h1 class="display-4">@ViewData["Title"]</h1></a>
    </div>

    <div class="d-flex flex-row align-items-center gap-3">
        @if (ViewBag.HideButton == null || ViewBag.HideButton != true)
        {
            <div class="shrink mb-0 -pb-1">
                @if ((ViewContext.RouteData.Values["action"].ToString()).ToLower() == "index")
                {
                    <a class="btn btn-primary has-icon" asp-action="Create">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" height="24" viewBox="0 -960 960 960" width="24"><path d="M440-280h80v-160h160v-80H520v-160h-80v160H280v80h160v160Zm40 200q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z" /></svg> Add New
                    </a>
                }
                else
                {
                    <a class="btn btn-primary has-icon" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" height="24" viewBox="0 -960 960 960" width="24"><path d="m336-280 144-144 144 144 56-56-144-144 144-144-56-56-144 144-144-144-56 56 144 144-144 144 56 56ZM480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z" /></svg> Cancel
                    </a>
                }
            </div>
        }

        @if (ViewData.ContainsKey("AdditionalLinks"))
        {
            <div class="shrink mb-0 -pb-1">
                @foreach (var link in ((List<AdditionalLinks>)ViewData["AdditionalLinks"]))
                {
                    @if (string.IsNullOrEmpty(link.Url))
                    {
                        <a class="@(!string.IsNullOrEmpty(link.ClassName) ? link.ClassName : "btn btn-primary has-icon")" asp-area="@link.Area" asp-controller="@link.Controller" asp-action="@link.Action" asp-all-route-data="@link.Data" id="@(!string.IsNullOrEmpty(link.IdName) ? link.IdName : Guid.NewGuid)">
                            @if (!string.IsNullOrEmpty(link.Icon))
                            {
                                <i class="material-symbols-rounded">@link.Icon</i>
                            }
                            <span>@link.Title</span>
                        </a>
                    }
                    else
                    {
                        <a class="@(!string.IsNullOrEmpty(link.ClassName) ? link.ClassName : "btn btn-primary has-icon")" href="@link.Url" id="@(!string.IsNullOrEmpty(link.IdName) ? link.IdName : Guid.NewGuid)">
                            @if (!string.IsNullOrEmpty(link.Icon))
                            {
                                <i class="material-symbols-rounded">@link.Icon</i>
                            }
                            <span>@link.Title</span>
                        </a>
                    }
                }
            </div>
        }
    </div>
</header>
<div class="mb-5">

    @if(TempData.ContainsKey("success"))
    {
        <div class="alert alert-success">
            @TempData["success"].ToString()
        </div>
    }

    @if (TempData.ContainsKey("error"))
    {
        <div class="alert alert-error">
            @TempData["error"].ToString()
        </div>
    }

    @if (TempData.ContainsKey("warning"))
    {
        <div class="alert alert-warning">
            @TempData["warning"].ToString()
        </div>
    }

</div>
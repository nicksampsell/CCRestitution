@model dynamic;
<div class="d-flex flex-row justify-content-between align-items-start p-3">
    <nav aria-label="Pagination">
        <ul class="pagination">
            <li class="page-item">
                @if (Model.CurrentPage > 1)
                {
                    <a asp-route-page="@(Model.CurrentPage - 1)" asp-route-perPage="@ViewBag.PerPage" asp-route-search="@ViewBag.Search" class="page-link">Previous</a>
                }
                else
                {
                    <a class="page-link disabled">Previous</a>
                }

            </li>

            @if (Model.TotalPages < 10)
            {
                for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item">
                        <a asp-route-page="@i" asp-route-perPage="@ViewBag.PerPage" asp-route-search="@ViewBag.Search" class="page-link">@i</a>
                    </li>
                }
            }
            else
            {

                for (int i = 1; i < Model.TotalPages; i++)
                {
                    if (i <= 5 || i >= (Model.TotalPages - 5))
                    {
                        <li>
                            <a asp-route-page="@i" asp-route-perPage="@ViewBag.PerPage" 
                            asp-route-search="@ViewBag.Search" class="page-link @((i == Model.CurrentPage) ? "active" : "")">@i</a>
                        </li>
                    }
                    else if (i == 6)
                    {
                        <li class="page-item">
                            <a class="page-link disabled">...</a>
                        </li>

                        if (Model.CurrentPage == 6)
                        {
                            <li class="page-item">
                                <a asp-route-page="@i" asp-route-perPage="@ViewBag.PerPage" asp-route-search="@ViewBag.Search" class="page-link 
                            @((i == Model.CurrentPage) ? "active" : "")">@i</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link disabled">...</a>
                            </li>
                        }

                    }
                    else if (i == Model.CurrentPage)
                    {


                        <li class="page-item">
                            <a asp-route-page="@Model.CurrentPage" asp-route-perPage="@ViewBag.PerPage" asp-route-search="@ViewBag.Search" class="page-link active">@Model.CurrentPage</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link disabled">...</a>
                        </li>

                    }
                }

            }

            <li class="page-item">
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <a asp-route-page="@(Model.CurrentPage + 1)" asp-route-perPage="@ViewBag.PerPage" asp-route-search="@ViewBag.Search" class="page-link">Next</a>
                }
                else
                {
                    <a class="page-link disabled">Next</a>
                }
            </li>
        </ul>
    </nav>

    <select onchange="setQueryParameters(event)" class="form-select w-auto">
        <option value="50" selected="@(ViewBag.PerPage == 50 ? true : false)">50 Records</option>
        <option value="100" selected="@(ViewBag.PerPage == 100 ? true : false)">100 Records</option>
        <option value="150" selected="@(ViewBag.PerPage == 150 ? true : false)">150 Records</option>
        <option value="200" selected="@(ViewBag.PerPage == 200 ? true : false)">200 Records</option>
        <option value="500" selected="@(ViewBag.PerPage == 500 ? true : false)">500 Records</option>
        <option value="@Model.TotalItems" selected=@(ViewBag.PerPage == Model.TotalItems ? true : false)>All Records</option>
    </select>
</div>

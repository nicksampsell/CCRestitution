@model Pagination<CCRestitution.Models.Attorney>

@{
    ViewData["Title"] = "Manage Attorneys";
    Layout = "SubLayouts/_Index";
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                Email Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Fax
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            @if(String.IsNullOrEmpty(item.FirstName) && !String.IsNullOrEmpty(item.LastName))
            {
                <td colspan="3">
                    @item.LastName
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            }

                <td>
                    @if (!String.IsNullOrEmpty(item.Address))
                    {
                        @item.Address

                        <br />
                    }
                    @if (!String.IsNullOrEmpty(item.Address2))
                    {
                        @item.Address2

                        <br />
                    }
                    @((item.City != null) ? $"{item.City}," : "") @item.State @item.ZipCode
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fax)
            </td>
            <td class="text-end"> 
                <a asp-action="Edit" asp-route-id="@item.AttorneyId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AttorneyId" class="btn btn-sm btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AttorneyId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

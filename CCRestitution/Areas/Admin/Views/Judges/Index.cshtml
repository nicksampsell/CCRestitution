@model Pagination<CCRestitution.Models.Judge>

@{
    ViewData["Title"] = "Manage Judges";
    Layout = "SubLayouts/_Index";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Court
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Court.Title)
            </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.CourtId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CourtId" class="btn btn-sm btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CourtId" class="btn btn-sm btn-danger">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
